---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Video Pembelajaran">
  <section class="max-w-xl mx-auto mt-12 bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-2xl font-bold text-center mb-6 text-blue-700">Pilih Jenjang Video Pembelajaran</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- SD -->
      <a href="/video-pembelajaran/sd" class="block rounded-2xl bg-gradient-to-br from-blue-100 to-cyan-50 p-6 flex flex-col items-center shadow group hover:shadow-2xl hover:scale-105 hover:ring-4 hover:ring-blue-300 transition-all duration-300">
        <svg class="w-12 h-12 mb-3 text-blue-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="4" y="4" width="16" height="16" rx="2"/><path d="M8 8h8M8 12h6"/></svg>
        <div class="font-semibold text-lg mb-1 text-blue-700">SD</div>
        <div class="text-gray-600 text-center text-base">Video pembelajaran untuk jenjang Sekolah Dasar.</div>
      </a>
      <!-- SMP -->
      <a href="/video-pembelajaran/smp" class="block rounded-2xl bg-gradient-to-br from-yellow-100 to-orange-50 p-6 flex flex-col items-center shadow group hover:shadow-2xl hover:scale-105 hover:ring-4 hover:ring-yellow-300 transition-all duration-300">
        <svg class="w-12 h-12 mb-3 text-yellow-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="4" y="4" width="16" height="16" rx="2"/><path d="M8 8h8M8 12h8M8 16h8"/></svg>
        <div class="font-semibold text-lg mb-1 text-yellow-700">SMP</div>
        <div class="text-gray-600 text-center text-base">Video pembelajaran untuk jenjang Sekolah Menengah Pertama.</div>
      </a>
      <!-- SMA -->
      <a href="/video-pembelajaran/sma" class="block rounded-2xl bg-gradient-to-br from-pink-100 to-purple-50 p-6 flex flex-col items-center shadow group hover:shadow-2xl hover:scale-105 hover:ring-4 hover:ring-pink-300 transition-all duration-300">
        <svg class="w-12 h-12 mb-3 text-pink-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect x="4" y="4" width="16" height="16" rx="2"/><path d="M8 8h8M8 12h8M8 16h8"/></svg>
        <div class="font-semibold text-lg mb-1 text-pink-700">SMA</div>
        <div class="text-gray-600 text-center text-base">Video pembelajaran untuk jenjang Sekolah Menengah Atas.</div>
      </a>
    </div>
  </section>
</Layout>
