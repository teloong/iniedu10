---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Profil Saya - IniEdu">
  <section class="max-w-xl mx-auto mt-12 bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-2xl font-bold text-center mb-6 text-blue-700">
      Profil Saya
    </h1>
    <div id="profile-info" class="text-center">Memuat profil...</div>
    <div id="action-buttons" class="flex flex-col items-center gap-4 mt-6 w-full">
        <a
            href="/dashboard"
            class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded shadow transition-all duration-200 w-full text-center"
            >Ke Dashboard</a
        >
        <button
            id="logout-btn"
            class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded shadow transition-all duration-200 w-full text-center"
            >Logout</button
        >
    </div>
    <script type="module" src="/profil.js"></script>
  </section>
</Layout>
