---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Daftar - IniEdu">
  <section class="max-w-2xl mx-auto mt-12 bg-white rounded-2xl shadow-lg p-8" data-aos="fade-up">
    <h1 class="text-2xl font-bold text-center mb-6 text-blue-700">Daftar Akun</h1>
    <div id="message" class="mb-4 text-center text-red-500"></div>
    <form id="register-form" class="flex flex-col gap-4">
      <input id="email" type="email" placeholder="Email" class="border rounded p-2" required />
      <input id="password" type="password" placeholder="Password" class="border rounded p-2" required />
      <!-- reCAPTCHA widget -->
      <div class="g-recaptcha" data-sitekey="6LdrI1ArAAAAABdUJ1UxSXpyLEaZ0jp1PN5x6aWL"></div>
      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 rounded transition-all">Daftar</button>
      <div class="text-center mt-4">
        <a href="/login" class="text-blue-600 hover:text-blue-800 text-sm">Sudah punya akun? Login</a>
      </div>
    </form>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="/firebaseConfig.js" is:inline></script>
<script type="module" src="/daftar.js"></script>
  </section>
</Layout>