---
import Layout from '../../layouts/Layout.astro';
---
<Layout title="Video Pembelajaran SMA">
  <section class="max-w-3xl mx-auto mt-12 bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-2xl font-bold text-center mb-8 text-blue-700">
      Video Pembelajaran SMA
    </h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Card Kelas 10 -->
      <a href="/video-pembelajaran/sma/kelas-10" class="group block p-6 bg-gradient-to-br from-blue-100 via-blue-50 to-white rounded-2xl shadow-lg border-2 border-transparent hover:border-blue-400 hover:shadow-2xl transform hover:-translate-y-2 hover:scale-105 transition-all duration-300 text-center cursor-pointer">
        <div class="flex flex-col items-center justify-center mb-2">
          <span class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-200 group-hover:bg-blue-400 transition-colors duration-300 mb-2 shadow">
            <!-- Icon Kelas 10 (Book) -->
            <svg class="w-8 h-8 text-blue-700 group-hover:text-white transition" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 20l9 2V6a2 2 0 0 0-2-2H7a2 2 0 0 0-2 2v16l9-2z"/></svg>
          </span>
        </div>
        <div class="text-3xl font-extrabold mb-1 text-blue-700 group-hover:text-white transition">Kelas 10</div>
      </a>
      <!-- Card Kelas 11 -->
      <a href="/video-pembelajaran/sma/kelas-11" class="group block p-6 bg-gradient-to-br from-pink-100 via-pink-50 to-white rounded-2xl shadow-lg border-2 border-transparent hover:border-pink-400 hover:shadow-2xl transform hover:-translate-y-2 hover:scale-105 transition-all duration-300 text-center cursor-pointer">
        <div class="flex flex-col items-center justify-center mb-2">
          <span class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-pink-200 group-hover:bg-pink-400 transition-colors duration-300 mb-2 shadow">
            <!-- Icon Kelas 11 (Medal) -->
            <svg class="w-8 h-8 text-pink-700 group-hover:text-white transition" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="8" r="4"/><path d="M8.21 13.89l-3.9 3.9a1 1 0 0 0 1.41 1.41l3.9-3.9M15.79 13.89l3.9 3.9a1 1 0 0 1-1.41 1.41l-3.9-3.9"/></svg>
          </span>
        </div>
        <div class="text-3xl font-extrabold mb-1 text-pink-700 group-hover:text-white transition">Kelas 11</div>
      <!-- Card Kelas 12 -->
      <a href="/video-pembelajaran/sma/kelas-12" class="group block p-6 bg-gradient-to-br from-green-100 via-green-50 to-white rounded-2xl shadow-lg border-2 border-transparent hover:border-green-400 hover:shadow-2xl transform hover:-translate-y-2 hover:scale-105 transition-all duration-300 text-center cursor-pointer">
        <div class="flex flex-col items-center justify-center mb-2">
          <span class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-200 group-hover:bg-green-400 transition-colors duration-300 mb-2 shadow">
            <!-- Icon Kelas 12 (Star) -->
            <svg class="w-8 h-8 text-green-700 group-hover:text-white transition" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><polygon points="12 2 15 8.5 22 9.3 17 14 18.5 21 12 17.5 5.5 21 7 14 2 9.3 9 8.5 12 2"/></svg>
          </span>
        </div>
        <div class="text-3xl font-extrabold mb-1 text-green-700 group-hover:text-white transition">Kelas 12</div>
      </a>
    </div>
  </section>
</Layout>
