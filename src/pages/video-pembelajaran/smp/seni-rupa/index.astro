---
import Layout from "../../../../layouts/Layout.astro";
const kelasList = [
  { nama: "Kelas 7", slug: "kelas-7" },
  { nama: "Kelas 8", slug: "kelas-8" },
  { nama: "Kelas 9", slug: "kelas-9" },
];
---

<Layout title="Pilih Kelas - Seni Rupa SMP">
  <section class="max-w-xl mx-auto mt-12 bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-2xl font-bold text-center mb-6 text-yellow-700">
      Pilih Kelas untuk Mapel Seni Rupa
    </h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {kelasList.map(kelas => (
        <a href={`/video-pembelajaran/smp/seni-rupa/${kelas.slug}`} class="block rounded-xl py-4 px-6 bg-gradient-to-br from-yellow-100 to-yellow-50 text-center font-semibold text-yellow-800 shadow hover:scale-105 transition">
          {kelas.nama}
        </a>
      ))}
    </div>
  </section>
</Layout>
