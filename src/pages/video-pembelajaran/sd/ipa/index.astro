---
import Layout from "../../../../layouts/Layout.astro";
const kelasList = [
  { nama: "Kelas 1", slug: "kelas-1" },
  { nama: "Kelas 2", slug: "kelas-2" },
  { nama: "Kelas 3", slug: "kelas-3" },
  { nama: "Kelas 4", slug: "kelas-4" },
  { nama: "Kelas 5", slug: "kelas-5" },
  { nama: "Kelas 6", slug: "kelas-6" },
];
---

<Layout title="Pilih Kelas - IPA SD">
  <section class="max-w-xl mx-auto mt-12 bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-2xl font-bold text-center mb-6 text-blue-700">
      Pilih Kelas untuk Mapel IPA
    </h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      {kelasList.map(kelas => (
        <a href={`/video-pembelajaran/sd/ipa/${kelas.slug}`} class="block rounded-xl py-4 px-6 bg-gradient-to-br from-blue-100 to-cyan-100 text-center font-semibold text-blue-800 shadow hover:scale-105 transition">
          {kelas.nama}
        </a>
      ))}
    </div>
  </section>
</Layout>