      <a href="/video-pembelajaran/sd/kelas-2/matematika" class="block rounded-2xl bg-gradient-to-br from-blue-100 to-cyan-50 p-6 mb-2 flex flex-col items-center shadow group hover:shadow-2xl hover:scale-105 hover:ring-4 hover:ring-blue-300 transition-all duration-300">
        <div class="font-semibold text-lg mb-1 text-blue-700">Matematika</div>
      </a>
      <a href="/video-pembelajaran/sd/kelas-2/bahasa-indo" class="block rounded-2xl bg-gradient-to-br from-orange-100 to-amber-50 p-6 mb-2 flex flex-col items-center shadow group hover:shadow-2xl hover:scale-105 hover:ring-4 hover:ring-amber-300 transition-all duration-300">
