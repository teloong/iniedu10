---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Video Pembelajaran SMP">
  <section class="max-w-xl mx-auto mt-12 bg-white rounded-2xl shadow-lg p-8">
    <h1 class="text-2xl font-bold text-center mb-6 text-blue-700">Pilih Kelas</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <a href="/video-pembelajaran/smp/kelas-7" class="block rounded-2xl bg-gradient-to-br from-blue-100 to-cyan-50 p-6 mb-2 flex flex-col items-center shadow group hover:shadow-2xl hover:scale-105 hover:ring-4 hover:ring-blue-300 transition-all duration-300">
        <div class="font-semibold text-lg mb-1 text-blue-700">Kelas 7</div>
      </a>
      <a href="/video-pembelajaran/smp/kelas-8" class="block rounded-2xl bg-gradient-to-br from-green-100 to-emerald-50 p-6 mb-2 flex flex-col items-center shadow group hover:shadow-2xl hover:scale-105 hover:ring-4 hover:ring-green-300 transition-all duration-300">
        <div class="font-semibold text-lg mb-1 text-green-700">Kelas 8</div>
      </a>
      <a href="/video-pembelajaran/smp/kelas-9" class="block rounded-2xl bg-gradient-to-br from-purple-100 to-pink-50 p-6 mb-2 flex flex-col items-center shadow group hover:shadow-2xl hover:scale-105 hover:ring-4 hover:ring-purple-300 transition-all duration-300">
        <div class="font-semibold text-lg mb-1 text-purple-700">Kelas 9</div>
      </a>
    </div>
  </section>
</Layout>
