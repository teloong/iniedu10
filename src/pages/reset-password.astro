---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Reset Password - IniEdu">
  <section class="max-w-2xl mx-auto mt-12 bg-white rounded-2xl shadow-lg p-8" data-aos="fade-up">
    <h1 class="text-2xl font-bold text-center mb-6 text-blue-700">Buat Password Baru</h1>
    
    <div id="message" class="mb-4 text-center"></div>
    
    <form id="reset-password-form" class="flex flex-col gap-4">
      <!-- Token akan diisi oleh JavaScript dari URL -->
      <input type="hidden" id="token" name="token" />
      
      <input type="password" id="password" name="password" required placeholder="Password Baru" class="border rounded p-2" />
      <input type="password" id="confirm_password" name="confirm_password" required placeholder="Konfirmasi Password Baru" class="border rounded p-2" />
      
      <button type="submit" id="submit-btn" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 rounded transition-all">Reset Password</button>
    </form>

    <script type="module" src="/reset-password.js"></script>
  </section>
</Layout>
