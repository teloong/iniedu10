---
import Layout from "../layouts/Layout.astro";
import AdminSidebar from "../components/AdminSidebar.astro";
import "../styles/global.css";
---

<Layout title="Pengaturan Admin">
  <div class="min-h-screen bg-gray-50 flex">
    <div class="sticky top-0 h-screen hidden md:block">
      <AdminSidebar active="admin-pengaturan"/>
    </div>
    <main class="flex-1 overflow-x-auto">
      <div class="max-w-3xl mx-auto px-4 py-8">
        <h1 class="text-3xl font-extrabold mb-8 text-[#232b4d]">Pengaturan Platform</h1>
        <div class="grid gap-8">
          <!-- Profil Admin & Keamanan -->
          <section class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-bold mb-3 text-blue-600 flex items-center gap-2"><svg width="24" height="24" fill="none" viewBox="0 0 24 24"><circle cx="12" cy="12" r="12" fill="#38bdf822"/><path d="M12 12a5 5 0 1 0 0-10 5 5 0 0 0 0 10zM2 20c0-3.866 4.03-7 10-7s10 3.134 10 7" stroke="#009fff" stroke-width="2"/></svg> Profil Admin</h2>
            <form class="flex flex-col gap-3">
              <input type="email" class="border rounded p-2" placeholder="Email Admin" disabled value="lemindes@gmail.com" />
              <input type="password" class="border rounded p-2" placeholder="Ubah Password" />
              <button class="bg-blue-500 text-white rounded py-2 font-semibold hover:bg-blue-600 transition">Simpan Perubahan</button>
            </form>
          </section>
          <!-- Pengaturan Umum Platform -->
          <section class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-bold mb-3 text-cyan-600 flex items-center gap-2"><svg width="24" height="24" fill="none" viewBox="0 0 24 24"><circle cx="12" cy="12" r="12" fill="#00ffe722"/><path d="M4 19v-2a4 4 0 0 1 4-4h8a4 4 0 0 1 4 4v2" stroke="#00bcd4" stroke-width="2"/><circle cx="12" cy="7" r="4" stroke="#00bcd4" stroke-width="2"/></svg> Umum</h2>
            <form class="flex flex-col gap-3">
              <input type="text" class="border rounded p-2" placeholder="Nama Platform" value="IniEdu" />
              <input type="text" class="border rounded p-2" placeholder="Deskripsi Singkat" />
              <input type="email" class="border rounded p-2" placeholder="Email Kontak" />
              <input type="text" class="border rounded p-2" placeholder="WhatsApp/Telepon" />
              <div class="flex gap-3 items-center">
                <label class="text-sm">Logo:</label>
                <input type="file" class="border rounded p-2" accept="image/*" />
              </div>
              <button class="bg-cyan-500 text-white rounded py-2 font-semibold hover:bg-cyan-600 transition">Simpan</button>
            </form>
          </section>
          <!-- Pengaturan Tampilan -->
          <section class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-bold mb-3 text-purple-600 flex items-center gap-2"><svg width="24" height="24" fill="none" viewBox="0 0 24 24"><circle cx="12" cy="12" r="12" fill="#e040fb22"/><path d="M12 3v18M3 12h18" stroke="#e040fb" stroke-width="2"/></svg> Tampilan</h2>
            <form class="flex flex-col gap-3">
              <select class="border rounded p-2">
                <option value="light">Light Mode</option>
                <option value="dark">Dark Mode</option>
                <option value="auto">Otomatis</option>
              </select>
              <div class="flex gap-3 items-center">
                <label class="text-sm">Banner Homepage:</label>
                <input type="file" class="border rounded p-2" accept="image/*" />
              </div>
              <button class="bg-purple-500 text-white rounded py-2 font-semibold hover:bg-purple-600 transition">Simpan</button>
            </form>
          </section>
          <!-- Pengaturan Sosial Media -->
          <section class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-bold mb-3 text-yellow-600 flex items-center gap-2"><svg width="24" height="24" fill="none" viewBox="0 0 24 24"><circle cx="12" cy="12" r="12" fill="#ffb30022"/><path d="M7 12h10M12 7v10" stroke="#ffb300" stroke-width="2"/></svg> Sosial Media</h2>
            <form class="flex flex-col gap-3">
              <input type="url" class="border rounded p-2" placeholder="Instagram" />
              <input type="url" class="border rounded p-2" placeholder="YouTube" />
              <input type="url" class="border rounded p-2" placeholder="Facebook" />
              <button class="bg-yellow-500 text-white rounded py-2 font-semibold hover:bg-yellow-600 transition">Simpan</button>
            </form>
          </section>
          <!-- Pengaturan Maintenance -->
          <section class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-bold mb-3 text-pink-600 flex items-center gap-2"><svg width="24" height="24" fill="none" viewBox="0 0 24 24"><circle cx="12" cy="12" r="12" fill="#e040fb22"/><path d="M12 8v8M8 12h8" stroke="#e040fb" stroke-width="2"/></svg> Maintenance</h2>
            <div class="flex items-center gap-3 mb-3">
              <label class="font-semibold">Aktifkan Maintenance Mode</label>
              <input type="checkbox" class="toggle toggle-pink-500" />
            </div>
            <textarea class="border rounded p-2 w-full" placeholder="Pesan maintenance (akan tampil di halaman utama jika mode aktif)"></textarea>
            <button class="bg-pink-500 text-white rounded py-2 font-semibold hover:bg-pink-600 transition mt-2">Simpan</button>
          </section>
        </div>
      </div>
    </main>
  </div>
</Layout>
