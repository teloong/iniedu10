<script is:inline>
  (async () => {
    const token = localStorage.getItem("adminAuthToken");
    console.log("[JwtAuth] Token:", token);
    if (!token) {
      window.location.href = `/admin-login?redirect=${encodeURIComponent(window.location.pathname + window.location.search)}`;
      return;
    }
    try {
      const response = await fetch("https://iniedu.id/check-auth.php", {
        method: "GET",
        headers: {
          Authorization: `Bearer ${token}`,
        },
      });
      console.log("[JwtAuth] Response status:", response.status);
      if (!response.ok) {
        console.error("Server error saat cek auth:", response.status);
        localStorage.removeItem("adminAuthToken");
        window.location.href = `/admin-login?redirect=${encodeURIComponent(window.location.pathname + window.location.search)}`;
        return;
      }
      const data = await response.json();
      console.log("[JwtAuth] Cek auth response:", data);
      if (!data.isLoggedIn) {
        localStorage.removeItem("adminAuthToken");
        window.location.href = `/admin-login?redirect=${encodeURIComponent(window.location.pathname + window.location.search)}`;
        return;
      } else {
        // Kirim sinyal bahwa otentikasi berhasil dan token siap digunakan
        document.dispatchEvent(new CustomEvent('auth-verified'));

        document.addEventListener("DOMContentLoaded", () => {
          const adminNameEl = document.getElementById("admin-name");
          if (adminNameEl && data.admin && data.admin.nama) {
            adminNameEl.textContent = data.admin.nama;
          }
          const logoutButton = document.getElementById("logout-button");
          if (logoutButton) {
            logoutButton.addEventListener("click", () => {
              localStorage.removeItem("adminAuthToken");
              window.location.href = `/admin-login?redirect=${encodeURIComponent(window.location.pathname + window.location.search)}`;
            });
          }
        });
      }
    } catch (error) {
      console.error("Gagal memverifikasi token:", error);
      localStorage.removeItem("adminAuthToken");
      window.location.href = `/admin-login?redirect=${encodeURIComponent(window.location.pathname + window.location.search)}`;
    }
  })();
</script>
