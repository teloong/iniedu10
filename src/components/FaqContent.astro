---

<div class="faq-container">
  <h2 class="faq-title" data-aos="fade-right">
    PERTANYAAN UMUM TERKAIT INIEDU
  </h2>
  <div class="faq-list">
    {
      faqs.map((faq, index) => (
        <div
          class="faq-item-wrapper"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <button class="faq-item">
            <span>{faq.question}</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="faq-arrow"
            >
              <path d="m9 18 6-6-6-6" />
            </svg>
          </button>
          <div class="faq-answer">
            <p>{faq.answer}</p>
          </div>
        </div>
      ))
    }
  </div>
  <!-- Gambar ilustrasi FAQ khusus mobile -->
  <img
    src="/images/bg.webp"
    alt="Ilustrasi FAQ Mobile"
    class="faq-mobile-image block mx-auto mt-6 mb-2 sm:mt-8 sm:mb-4 lg:hidden"
    style="max-width: 320px; width: 90%; height: auto; border-radius: 1.5rem;"
  />
</div>

<style>
  @media (min-width: 1024px) {
    .faq-mobile-image {
      display: none !important;
    }
  }
</style>

<style>
  .faq-container {
    max-width: 800px;
    padding: 0 1rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .faq-title {
    color: rgb(0, 0, 0);
    font-size: 2rem;
    font-weight: 900;
    text-align: left;
    margin-bottom: 2.5rem;
  }

  .faq-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item-wrapper {
    width: 100%;
    max-width: 720px; /* Dibuat lebih ramping secara default */
    background-color: white;
    border-radius: 1rem;
    box-shadow:
      0 4px 6px -1px rgb(0 0 0 / 0.1),
      0 2px 4px -2px rgb(0 0 0 / 0.1);
    /* Tambah transisi untuk lebar dan margin */
    transition:
      max-width 0.4s ease-in-out,
      margin-bottom 0.3s ease-in-out,
      opacity 0.6s ease,
      transform 0.6s ease;
    overflow: hidden;
  }

  .faq-item-wrapper.active {
    max-width: 800px; /* Melebar saat aktif untuk memberi ruang jawaban */
  }

  .faq-item {
    background-color: transparent;
    border: none;
    padding: 1.5rem;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: left;
    font-weight: 600;
    font-size: 1rem;
    color: #374151;
    cursor: pointer;
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition:
      max-height 0.4s ease-out,
      padding 0.4s ease-out;
    padding: 0 1.5rem;
    color: #4b5563;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .faq-item-wrapper.active .faq-answer {
    padding-bottom: 1.5rem;
    max-height: 500px; /* Pastikan konten bisa terbuka penuh */
    transition:
      max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      padding 0.4s;
  }

  .faq-arrow {
    color: #38bdf8;
    width: 28px;
    height: 28px;
    stroke-width: 3;
    transition: transform 0.3s ease-in-out;
    flex-shrink: 0; /* Mencegah panah menyusut */
  }

  .faq-item-wrapper.active .faq-arrow {
    transform: rotate(90deg);
  }

  @media (max-width: 768px) {
    .faq-title {
      font-size: 1.5rem;
    }
    .faq-item {
      padding: 1rem 1.25rem;
    }
    .faq-answer {
      padding: 0 1.25rem;
    }
  }
</style>

<script is:inline>
  function setupAccordion() {
    console.log("CASCADE: Mencoba menjalankan script accordion...");
    const wrappers = document.querySelectorAll(".faq-item-wrapper");
    console.log(`CASCADE: Ditemukan ${wrappers.length} item FAQ.`);

    if (wrappers.length === 0) return;

    wrappers.forEach((wrapper, index) => {
      const button = wrapper.querySelector(".faq-item");
      const answer = wrapper.querySelector(".faq-answer");

      if (button && answer) {
        button.addEventListener("click", () => {
          console.log(`CASCADE: Item FAQ #${index + 1} diklik.`);
          const wasActive = wrapper.classList.contains("active");

          // Tutup semua yang lain
          wrappers.forEach((w) => {
            if (w !== wrapper) {
              w.classList.remove("active");
              const ans = w.querySelector(".faq-answer");
              if (ans) {
                ans.style.maxHeight = null;
              }
            }
          });

          // Buka/tutup yang diklik
          if (!wasActive) {
            wrapper.classList.add("active");
            console.log(
              `CASCADE: scrollHeight jawaban adalah ${answer.scrollHeight}px`
            );
            answer.style.maxHeight = answer.scrollHeight + "px";
          } else {
            wrapper.classList.remove("active");
            answer.style.maxHeight = null;
          }
        });
      } else {
        console.error(
          `CASCADE: Tombol atau jawaban tidak ditemukan untuk item #${index + 1}`
        );
      }
    });
  }

  // Jalankan saat halaman dimuat pertama kali
  document.addEventListener("DOMContentLoaded", setupAccordion);
  // Jalankan saat navigasi halaman di Astro
  document.addEventListener("astro:page-load", setupAccordion);
</script>
